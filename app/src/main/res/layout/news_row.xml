<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/news_content"
            android:layout_width="306dp"
            android:layout_height="151dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textColor="#7D7E7E"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/news_uname"
            app:layout_constraintTop_toBottomOf="@+id/news_uname" />

        <TextView
            android:id="@+id/news_title"
            android:layout_width="299dp"
            android:layout_height="51dp"
            android:padding="8dp"
            android:text="TextView"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/news_cover"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/news_cover"
            android:layout_width="73dp"
            android:layout_height="66dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_cake_black_24dp" />

        <TextView
            android:id="@+id/news_uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:background="#FBFCFD"
            android:text="TextView"
            android:textColor="#03A9F4"
            app:layout_constraintStart_toStartOf="@+id/news_title"
            app:layout_constraintTop_toTopOf="@+id/news_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>